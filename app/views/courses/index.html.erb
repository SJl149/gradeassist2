<div class="panel panel-default">
  <div class="panel panel-body">
    <h1 class="text-center">Classes</h1>
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr class="info">
            <th>Class Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Edit</th>
            <th>Delete</th>
            <th>Download Report</th>
          </tr>
        </thead>
        <tbody>
          <% @courses.each do |course| %>
            <tr>
              <td><%= link_to course.name, course %> </td>
              <td><%= course.start_date.to_date.to_formatted_s(:long_ordinal) %></td>
              <td><%= course.end_date.to_date.to_formatted_s(:long_ordinal) %></td>
              <td><%= link_to "Edit Class", edit_course_path(course), class: "btn btn-warning btn-sm" %></td>
              <td><%= link_to "Delete Class", course, method: :delete, data: {confirm: "Are you sure you want to delete this class?"}, class: "btn btn-danger btn-sm" %></td>
              <td><%= link_to "Download Grade Breakdown", course_path(id: course.id, format: :xlsx), data: {confirm: "Are you sure you want to download to this computer?"}, class: "btn btn-primary btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
