<div class="nested-fields category-tag-fields">
  <%= f.input :name, input_html: { class: "small-text-field" } %>
  <div class="row">
    <div class="col-md-6">
      <%= f.input :weight, wrapper: :horizontal_input_group do %>
        <%= f.input_field :weight, class: 'form-control' %>
