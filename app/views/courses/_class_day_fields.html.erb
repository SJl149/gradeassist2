<div class="nested-fields class_day-tag-fields">
  <div class="row">
    <div class="col-md-6">
      <%= f.input :day_of_week, label: "Day", wrapper: :horizontal_input_group do %>
      <%= f.input_field :day_of_week, collection: ClassDay.day_of_weeks.keys, class: 'form-control' %>
        <%= link_to_remove_association 'Remove', f, class: 'input-group-addon btn-danger' %>
      <% end %>
    </div>
  </div>
</div>
