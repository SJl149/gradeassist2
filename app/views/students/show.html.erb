<div class="panel panel-default">
  <div class="panel-body">
    <h1 class="text-center"><%= @student.nickname %> (<%= @student.family_name %>, <%= @student.given_name %>)</h1>
    <h3 class="text-center"><%= @student.email %> <%= link_to "Edit Student Record", edit_student_path(@student), class: "btn btn-primary btn-sm" %></h3>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title text-center"><%= @course.name %> (<%= @course.start_date.strftime("%-m/%-d/%y") %> - <%= @course.end_date.strftime("%-m/%-d/%y") %>)</h3>
      </div>
      <div class="panel-body student-grades">
        <div class="row">
          <div class="col-md-5">
            <h3 class="text-primary">Grades</h3>
            <% @grades.each do |category, grade_average| %>
              <h4><%= category %>: <%= grade_average %>%</h4>
            <% end %>
          </div>
          <div class="col-md-4">
            <h3 class="text-danger">Absences</h3>
            <% @absences.each do |absence| %>
              <p><%= absence.class_date.strftime("%m/%d %a") %></p>
            <% end %>
          </div>
          <div class="col-md-3">
            <h3 class="text-warning">Lates</h3>
            <% @lates.each do |late| %>
              <p><%= late.class_date.strftime("%m/%d %a") %></p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-body">
    <div class="col-md-5 col-md-offset-3">
      <div class="btn-group btn-group-justified">
        <%= link_to "Class Overview", @course, class: "btn btn-primary" %>
        <%= link_to "#{@student.nickname}'s Grades", { :controller => "daily_grades", :action => "index", :student => @student.id }, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
