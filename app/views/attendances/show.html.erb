<div class="panel panel-success">
  <div class="panel-heading">
    <h2 class="panel-title text-center">Attendance: <%= @course.name %> | <%= @attendance_date.to_formatted_s(:long_ordinal) %></h2>
    <%= form_tag attendance_path, class: 'grade-time-select', method: :get do %>
      <%= hidden_field_tag :course_id, @course.id %>
      <%= label_tag :date, 'Select a date' %>
      <%= text_field_tag :date, @attendance_date, class: 'form-control small-date-field grade-datepicker' %>
    <% end %>
  </div>
  <div class="panel-body table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Student</th>
          <th>Status</th>
          <th>Present</th>
          <th>Late</th>
          <th>Absent</th>
          <th>Comments</th>
        </tr>
      </thead>
      <tbody>
        <%= content_tag :div, id: "start_end_dates", data: { start_date: @course.start_date.to_date, end_date: @course.end_date.to_date } do %>
        <% end %>
        <% @students.each do |student| %>
          <% @student_attendance = student.attendances.for_date(@attendance_date) %>
          <tr>
            <td><%= student.nickname %></td>
            <td id="student_<%= student.id %>"><span class="label label-<%= attendance_label(@student_attendance.status) %>" ><%= @student_attendance.status %></span></td>
            <td><%= link_to 'Present', attendance_path(student_id: student, date: @attendance_date, attendance: { status: :present}), remote: true, method: :patch, class: "btn btn-success" %></td>
            <td><%= link_to 'Late', attendance_path(student_id: student, course_id: @course.id, date: @attendance_date, attendance: { status: :late}), remote: true, method: :patch, class: "btn btn-warning" %></td>
            <td><%= link_to 'Absent', attendance_path(student_id: student, course_id: @course.id, date: @attendance_date, attendance: { status: :absent}), remote: true, method: :patch, class: "btn btn-danger" %></td>
            <td></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
